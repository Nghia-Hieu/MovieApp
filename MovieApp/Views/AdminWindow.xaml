<Window x:Class="MovieApp.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:local="clr-namespace:MovieApp.ViewModel"
        xmlns:local1="clr-namespace:MovieApp.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        Background="Wheat"
        DataContext="{StaticResource AdminVM}"
        mc:Ignorable="d"
        Title="AdminWindow"
        Height="700"
        Width="1000">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadChartCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Window.Resources>
        <local:BooleanToColorConverter x:Key="CurrencyConverter" />
    </Window.Resources>
    <materialDesign:Card>
        <TabControl HorizontalContentAlignment="Center"
                    materialDesign:ColorZoneAssist.Mode="PrimaryLight"
                    materialDesign:NavigationRailAssist.SelectionCornerRadius="50"
                    materialDesign:NavigationRailAssist.ShowSelectionBackground="True"
                    Style="{StaticResource MaterialDesignNavigationRailTabControl}"
                    TabStripPlacement="Bottom">
            <TabControl.Resources>
                <!-- Style for TabItem -->
                <Style TargetType="TabItem">
                    <Setter Property="VerticalContentAlignment"
                            Value="Center" />
                </Style>
            </TabControl.Resources>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Width="auto"
                                Height="auto">
                        <materialDesign:PackIcon Width="24"
                                                 Height="24"
                                                 HorizontalAlignment="Center"
                                                 Kind="Folder" />
                        <TextBlock HorizontalAlignment="Center"
                                   Text="Thống kê" />
                    </StackPanel>
                </TabItem.Header>
                <ScrollViewer VerticalScrollBarVisibility="Visible"
                              HorizontalScrollBarVisibility="Visible"
                              CanContentScroll="True">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="500"></RowDefinition>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0"
                              Margin="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <materialDesign:Card Width="200"
                                                 Grid.Column="0"
                                                 Padding="0"
                                                 Background="AliceBlue"
                                                 Foreground="Black">
                                <StackPanel Orientation="Horizontal"
                                            Margin="5">
                                    <Rectangle VerticalAlignment="Stretch"
                                               Width="5"
                                               Fill="Purple"
                                               Margin="10,20,0,30"
                                               Stroke="Purple" />
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0"
                                                   Margin="10,16,16,0"
                                                   FontWeight="Light"
                                                   Text="Số phim đang bán vé: " />
                                        <TextBlock Grid.Row="1"
                                                   Margin="10,0,16,4"
                                                   Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                                   Text="{Binding AvailableMovies}" />
                                        <TextBlock Grid.Row="2"
                                                   Margin="0,5,16,0"
                                                   FontWeight="ExtraLight"
                                                   Foreground="Purple"
                                                   FontStyle="Italic"
                                                   Text="Theo ngày" />
                                    </Grid>
                                    <materialDesign:PackIcon Kind="Ticket"
                                                             Margin="0,10,0,0"
                                                             HorizontalAlignment="Center"
                                                             VerticalAlignment="Center"
                                                             Height="30"
                                                             Width="30"
                                                             Foreground="Purple" />
                                </StackPanel>
                            </materialDesign:Card>

                            <materialDesign:Card Width="200"
                                                 Grid.Column="1"
                                                 Padding="0"
                                                 Background="AliceBlue"
                                                 Foreground="Black">
                                <StackPanel Orientation="Horizontal"
                                            Margin="5">
                                    <Rectangle VerticalAlignment="Stretch"
                                               Width="5"
                                               Fill="LightBlue"
                                               Margin="10,20,0,30"
                                               Stroke="LightBlue" />
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0"
                                                   Margin="10,16,16,0"
                                                   FontWeight="Light"
                                                   Text="Số suất đang có: " />
                                        <TextBlock Grid.Row="1"
                                                   Margin="10,0,16,4"
                                                   Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                                   Text="{Binding DailyShows}" />
                                        <TextBlock Grid.Row="2"
                                                   Margin="0,5,16,0"
                                                   FontWeight="ExtraLight"
                                                   Foreground="CadetBlue"
                                                   FontStyle="Italic"
                                                   Text="Theo ngày" />

                                    </Grid>
                                    <materialDesign:PackIcon Kind="MovieRoll"
                                                             Margin="30,0,0,0"
                                                             HorizontalAlignment="Center"
                                                             VerticalAlignment="Center"
                                                             Height="30"
                                                             Width="30"
                                                             Foreground="LightBlue" />
                                </StackPanel>
                            </materialDesign:Card>

                            <materialDesign:Card Width="200"
                                                 Grid.Column="2"
                                                 Padding="0"
                                                 Background="AliceBlue"
                                                 Foreground="Black">
                                <StackPanel Orientation="Horizontal"
                                            Margin="5">
                                    <Rectangle VerticalAlignment="Stretch"
                                               Width="5"
                                               Fill="LightGreen"
                                               Margin="10,20,0,30"
                                               Stroke="LightGreen" />
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0"
                                                   Margin="10,16,16,0"
                                                   FontWeight="Light"
                                                   Text="Số suất đang có: " />
                                        <TextBlock Grid.Row="1"
                                                   Margin="10,0,16,4"
                                                   Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                                   Text="{Binding WeeklyShows}" />
                                        <TextBlock Grid.Row="2"
                                                   Margin="0,5,16,0"
                                                   FontWeight="ExtraLight"
                                                   Foreground="ForestGreen"
                                                   FontStyle="Italic"
                                                   Text="Theo tuần" />

                                    </Grid>
                                    <materialDesign:PackIcon Kind="MovieRoll"
                                                             Margin="30,0,0,0"
                                                             HorizontalAlignment="Center"
                                                             VerticalAlignment="Center"
                                                             Height="30"
                                                             Width="30"
                                                             Foreground="ForestGreen" />
                                </StackPanel>
                            </materialDesign:Card>
                        </Grid>

                        <Grid Grid.Row="1"
                              Margin="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0"
                                  Height="500"
                                  Margin="20,0,20,0"
                                  Background="AliceBlue">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                </Grid.RowDefinitions>
                                <DockPanel Grid.Row="0"
                                           VerticalAlignment="Center"
                                           Margin="20">
                                    <TextBlock DockPanel.Dock="Left"
                                               HorizontalAlignment="Center"
                                               FontWeight="DemiBold"
                                               FontSize="15"
                                               FontStyle="Italic">Bảng Doanh Thu theo Ngày
                                    </TextBlock>
                                    <DatePicker Width="200"
                                                DockPanel.Dock="Right"
                                                materialDesign:HintAssist.Hint="Chọn ngày bắt đầu"
                                                materialDesign:TextFieldAssist.HasClearButton="True"
                                                SelectedDate="{Binding WeekChartDate, StringFormat=dd/MM/yyyy}">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="SelectedDateChanged">
                                                <i:InvokeCommandAction Command="{Binding GetDateCommand}" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>

                                    </DatePicker>
                                </DockPanel>


                                <lvc:CartesianChart Series="{Binding CartesianSeriesCollection}"
                                                    Grid.Row="1"
                                                    Height="200"
                                                    LegendLocation="Bottom">
                                    <lvc:CartesianChart.AxisX>
                                        <lvc:Axis Title="Ngày"
                                                  Labels="{Binding Labels}"
                                                  Separator="{x:Static lvc:DefaultAxes.CleanSeparator}" />
                                    </lvc:CartesianChart.AxisX>
                                    <lvc:CartesianChart.AxisY>
                                        <lvc:Axis Title="Doanh thu"
                                                  LabelFormatter="{Binding Formatter}"></lvc:Axis>
                                    </lvc:CartesianChart.AxisY>
                                </lvc:CartesianChart>


                            </Grid>

                            <Grid Grid.Column="1"
                                  Height="500"
                                  Margin="20,0,20,0"
                                  Background="AliceBlue">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                </Grid.RowDefinitions>
                                <DockPanel Grid.Row="0"
                                           VerticalAlignment="Center"
                                           Margin="20">
                                    <TextBlock DockPanel.Dock="Left"
                                               HorizontalAlignment="Center"
                                               FontWeight="DemiBold"
                                               FontSize="15"
                                               FontStyle="Italic">Bảng Doanh Thu theo Tuần
                                    </TextBlock>
                                    <DatePicker Width="200"
                                                DockPanel.Dock="Right"
                                                materialDesign:HintAssist.Hint="Chọn ngày bắt đầu"
                                                materialDesign:TextFieldAssist.HasClearButton="True"
                                                SelectedDate="{Binding MonthChartDate, StringFormat=dd/MM/yyyy}">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="SelectedDateChanged">
                                                <i:InvokeCommandAction Command="{Binding GetMonthCommand}" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>

                                    </DatePicker>
                                </DockPanel>


                                <lvc:CartesianChart Series="{Binding SeriesCollection}"
                                                    Grid.Row="1"
                                                    Height="200"
                                                    LegendLocation="Bottom">
                                    <lvc:CartesianChart.AxisY>
                                        <lvc:Axis Title="Doanh thu"
                                                  LabelFormatter="{Binding Formatter2}"></lvc:Axis>
                                    </lvc:CartesianChart.AxisY>
                                    <lvc:CartesianChart.AxisX>
                                        <lvc:Axis Title="Tuần"
                                                  Labels="{Binding Labels2}"></lvc:Axis>
                                    </lvc:CartesianChart.AxisX>
                                </lvc:CartesianChart>


                            </Grid>
                        </Grid>

                        <Grid Grid.Row="2"
                              Margin="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0"
                                  Height="500"
                                  Margin="20,0,20,0"
                                  Background="AliceBlue">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                </Grid.RowDefinitions>
                                <DockPanel Grid.Row="0"
                                           VerticalAlignment="Center"
                                           Margin="20">
                                    <TextBlock DockPanel.Dock="Left"
                                               HorizontalAlignment="Center"
                                               FontWeight="DemiBold"
                                               FontSize="15"
                                               FontStyle="Italic">Bảng Suất chiếu theo Ngày
                                    </TextBlock>
                                    <ComboBox Name="LocaleCombo"
                                              Width="200"
                                              DockPanel.Dock="Right"
                                              ItemsSource="{Binding ListTopMovie}"
                                              DisplayMemberPath="MovieName"
                                              SelectedItem="{Binding DailyMovieSelected}">
                                        <ComboBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <VirtualizingStackPanel />
                                            </ItemsPanelTemplate>
                                        </ComboBox.ItemsPanel>
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="SelectionChanged">
                                                <i:InvokeCommandAction Command="{Binding GetDateMovieShowCommand}" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </ComboBox>
                                    <DatePicker Width="200"
                                                DockPanel.Dock="Right"
                                                materialDesign:HintAssist.Hint="Chọn ngày bắt đầu"
                                                materialDesign:TextFieldAssist.HasClearButton="True"
                                                SelectedDate="{Binding WeekShowChartDate, StringFormat=dd/MM/yyyy}">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="SelectedDateChanged">
                                                <i:InvokeCommandAction Command="{Binding GetDateShowCommand}" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>

                                    </DatePicker>
                                </DockPanel>


                                <lvc:CartesianChart Series="{Binding DailyMovieShowCollection}"
                                                    Grid.Row="1"
                                                    Height="200"
                                                    LegendLocation="Bottom">
                                    <lvc:CartesianChart.AxisY>
                                        <lvc:Axis Title="Suất"
                                                  LabelFormatter="{Binding DailyShowFormatter}"></lvc:Axis>
                                    </lvc:CartesianChart.AxisY>
                                    <lvc:CartesianChart.AxisX>
                                        <lvc:Axis Title="Ngày"
                                                  Labels="{Binding DailyShowLabels}"></lvc:Axis>
                                    </lvc:CartesianChart.AxisX>
                                </lvc:CartesianChart>


                            </Grid>

                            <Grid Grid.Column="1"
                                  Height="500"
                                  Margin="20,0,20,0"
                                  Background="AliceBlue">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                </Grid.RowDefinitions>
                                <DockPanel Grid.Row="0"
                                           VerticalAlignment="Center"
                                           Margin="20">
                                    <TextBlock DockPanel.Dock="Left"
                                               HorizontalAlignment="Center"
                                               FontWeight="DemiBold"
                                               FontSize="15"
                                               FontStyle="Italic">Bảng Suất chiếu theo Tuần
                                    </TextBlock>
                                    <ComboBox Width="200"
                                              DockPanel.Dock="Right"
                                              ItemsSource="{Binding ListTopMovie}"
                                              DisplayMemberPath="MovieName"
                                              SelectedItem="{Binding WeeklyMovieSelected}">
                                        <ComboBox.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <VirtualizingStackPanel />
                                            </ItemsPanelTemplate>
                                        </ComboBox.ItemsPanel>
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="SelectionChanged">
                                                <i:InvokeCommandAction Command="{Binding GetWeekMovieShowCommand}" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </ComboBox>
                                    <DatePicker Width="200"
                                                DockPanel.Dock="Right"
                                                materialDesign:HintAssist.Hint="Chọn ngày bắt đầu"
                                                materialDesign:TextFieldAssist.HasClearButton="True"
                                                SelectedDate="{Binding MonthShowChartDate, StringFormat=dd/MM/yyyy}">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="SelectedDateChanged">
                                                <i:InvokeCommandAction Command="{Binding GetMonthShowCommand}" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>

                                    </DatePicker>
                                </DockPanel>


                                <lvc:CartesianChart Series="{Binding WeeklyMovieShowCollection}"
                                                    Grid.Row="1"
                                                    Height="200"
                                                    LegendLocation="Bottom">
                                    <lvc:CartesianChart.AxisY>
                                        <lvc:Axis Title="Suất"
                                                  LabelFormatter="{Binding WeeklyShowFormatter}"></lvc:Axis>
                                    </lvc:CartesianChart.AxisY>
                                    <lvc:CartesianChart.AxisX>
                                        <lvc:Axis Title="Tuần"
                                                  Labels="{Binding WeeklyShowLabels}"></lvc:Axis>
                                    </lvc:CartesianChart.AxisX>
                                </lvc:CartesianChart>


                            </Grid>

                        </Grid>

                        <Grid Grid.Row="3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0"
                                       Text="Phim bán được nhiều vé nhất"
                                       Margin="20"
                                       HorizontalAlignment="Center"
                                       FontSize="15"
                                       FontWeight="DemiBold" />
                            <ListView Grid.Row="1"
                                      Margin="20"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Stretch"
                                      ItemsSource="{Binding ListTopMovie}">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="HorizontalContentAlignment"
                                                Value="Stretch" />
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="ID">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding MovieId}"
                                                               HorizontalAlignment="Center" />
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn DisplayMemberBinding="{Binding MovieName}"
                                                        Header="Tên phim" />
                                        <GridViewColumn Header="Ngày khởi chiếu">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding ReleaseDate, StringFormat=dd/MM/yyyy}"
                                                               HorizontalAlignment="Center" />
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Số vé đã bán được">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding NumberOfSeats, StringFormat={}{0:N0}}"
                                                               HorizontalAlignment="Center" />
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="Tổng doanh thu">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding TotalPrice, StringFormat={}{0:N0} VND}"
                                                               HorizontalAlignment="Center" />
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Grid>

                    </Grid>
                </ScrollViewer>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Width="auto"
                                Height="auto">
                        <materialDesign:PackIcon Width="24"
                                                 Height="24"
                                                 HorizontalAlignment="Center"
                                                 Kind="ClockOutline" />
                        <TextBlock HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   Text="Quản lí Phim" />
                    </StackPanel>
                </TabItem.Header>
                <ScrollViewer VerticalScrollBarVisibility="Visible">
                    <Frame Name="MainFrame" />
                </ScrollViewer>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Width="auto"
                                Height="auto">
                        <materialDesign:PackIcon Width="24"
                                                 Height="24"
                                                 HorizontalAlignment="Center"
                                                 Kind="Images" />
                        <TextBlock HorizontalAlignment="Center"
                                   Text="Photos" />
                    </StackPanel>
                </TabItem.Header>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Width="auto"
                                Height="auto">
                        <materialDesign:PackIcon Width="24"
                                                 Height="24"
                                                 HorizontalAlignment="Center"
                                                 Kind="MusicBoxMultiple" />
                        <TextBlock HorizontalAlignment="Center"
                                   Text="Sounds" />
                    </StackPanel>
                </TabItem.Header>
            </TabItem>
        </TabControl>
    </materialDesign:Card>
</Window>

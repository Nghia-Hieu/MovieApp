<Window x:Class="MovieApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieApp.Views"
        mc:Ignorable="d"
        DataContext="{StaticResource MainVM}"
        Name="mainWindow"
        WindowState="Maximized"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Title"></TextBlock>
                <Button Name="toLoginButton" Grid.Column="1" Command="{Binding ToLoginCommand}" CommandParameter="{Binding ElementName=mainWindow}">Login</Button>
            </Grid>

            <Grid Grid.Row="1">
                <Border Background="{StaticResource cs_Background}"
                CornerRadius="20"
                BorderThickness="3"
                BorderBrush="{StaticResource cs_BorderBrush}"/>

                <Slider x:Name="slider" 
                Minimum="0" 
                Maximum="2" 
                TickPlacement="BottomRight" 
                TickFrequency="1" 
                ValueChanged="slider_ValueChanged" 
                Visibility="Hidden"/>

                <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">

                    <Button x:Name="btnPrevious" 
                    Style="{StaticResource BtnPrevStyle}"
                    Click="btnPrevious_Click"/>

                    <StackPanel x:Name="stackPanel">

                        <Grid x:Name="grid0" 
                      Visibility="Visible">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Height="250"
                            Width="200"
                            BorderThickness="5"
                            CornerRadius="10"
                            BorderBrush="{StaticResource cs_ImgPas}"/>

                            <StackPanel VerticalAlignment="Center">
                                <Image Source="../Images/MonAct.png" 
                           Grid.Row="0"
                           Width="150" 
                           Height="150" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>

                                <TextBlock Text="M O N K E Y" 
                               Grid.Row="1"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               FontFamily="Roboto"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource cs_Txt}"
                               Margin="0 30 0 5"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal"
                                Grid.Row="1"
                                HorizontalAlignment="Center"
                                Margin="0 10 0 0">
                                <Ellipse Height="10"
                                 Width="10"
                                 Fill="Black"
                                 Opacity="1"
                                 Margin="1"/>
                                <Ellipse Height="10"
                                 Width="10"
                                 Fill="Black"
                                 Opacity="0.25"
                                 Margin="1"/>
                                <Ellipse Height="10"
                                 Width="10"
                                 Fill="Black"
                                 Opacity="0.25"
                                 Margin="1"/>
                            </StackPanel>

                        </Grid>

                        <Grid x:Name="grid1" 
                      Visibility="Collapsed">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Height="250"
                            Width="200"
                            BorderThickness="5"
                            CornerRadius="10"
                            BorderBrush="{StaticResource cs_ImgPas}"/>

                            <StackPanel VerticalAlignment="Center">
                                <Image Source="../Images/WolfAct.png" 
                           Grid.Row="0"
                           Width="150" 
                           Height="150" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>

                                <TextBlock Text="W O L F" 
                               Grid.Row="1"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               FontFamily="Roboto"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource cs_Txt}"
                               Margin="0 30 0 0"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal"
                                Grid.Row="1"
                                HorizontalAlignment="Center"
                                Margin="0 10 0 0">
                                <Ellipse Height="10"
                                 Width="10"
                                 Fill="Black"
                                 Opacity="0.25"
                                 Margin="1"/>
                                <Ellipse Height="10"
                                 Width="10"
                                 Fill="Black"
                                 Opacity="1"
                                 Margin="1"/>
                                <Ellipse Height="10"
                                 Width="10"
                                 Fill="Black"
                                 Opacity="0.25"
                                 Margin="1"/>
                            </StackPanel>

                        </Grid>

                        <Grid x:Name="grid2" 
                      Visibility="Collapsed">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Height="250"
                            Width="200"
                            BorderThickness="5"
                            CornerRadius="10"
                            BorderBrush="{StaticResource cs_ImgPas}"/>

                            <StackPanel VerticalAlignment="Center">
                                <Image Source="../Images/ZebraAct.png" 
                           Grid.Row="0"
                           Width="150" 
                           Height="150" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>

                                <TextBlock Text="Z E B R A" 
                               Grid.Row="1"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               FontFamily="Roboto"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource cs_Txt}"
                               Margin="0 30 0 0"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal"
                                Grid.Row="1"
                                HorizontalAlignment="Center"
                                Margin="0 10 0 0">
                                <Ellipse Height="10"
                                 Width="10"
                                 Fill="Black"
                                 Opacity="0.25"
                                 Margin="1"/>
                                <Ellipse Height="10"
                                 Width="10"
                                 Fill="Black"
                                 Opacity="0.25"
                                 Margin="1"/>
                                <Ellipse Height="10"
                                 Width="10"
                                 Fill="Black"
                                 Opacity="1"
                                 Margin="1"/>
                            </StackPanel>

                        </Grid>

                    </StackPanel>

                    <Button x:Name="btnNext" 
                    Style="{StaticResource BtnNextStyle}" 
                    Click="btnNext_Click"/>

                </StackPanel>
            </Grid>

            <Grid Grid.Row="2">
                <ContentControl x:Name="ContentArea"/>
            </Grid>

        </Grid>
    </Grid>
</Window>

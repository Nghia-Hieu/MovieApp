<Window x:Class="MovieApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieApp.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        DataContext="{StaticResource MainVM}"
        Name="mainWindow"
        WindowState="Maximized"
        Title="MainWindow"
        MinHeight="1000"
        MinWidth="1000">

    <ScrollViewer VerticalScrollBarVisibility="Visible"
                  HorizontalScrollBarVisibility="Visible"
                  CanContentScroll="True">
        <Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid VerticalAlignment="Center">
                        <TextBlock HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Margin="10,10,10,10"
                                   FontSize="25"
                                   FontWeight="Bold"
                                   FontStyle="Italic"
                                   Foreground="MediumPurple"
                                   FontFamily="Verdana">CINEMA STEAM</TextBlock>


                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                            <TextBox x:Name="SearchTextBox"
                                     Text="{Binding SearchKey}"
                                     materialDesign:HintAssist.Hint="Search"
                                     Width="150"
                                     Margin="0,10,0,10">
                            </TextBox>
                            <Button IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                    Style="{StaticResource MaterialDesignIconButton}"
                                    ToolTip="MaterialDesignIconButton"
                                    Command="{Binding SearchCommand}">
                                <materialDesign:PackIcon  Kind="MovieSearchOutline" />
                            </Button>
                        </StackPanel>

                        <Menu HorizontalAlignment="Right">
                            <MenuItem Header="Movie"
                                      Cursor="Hand">
                            </MenuItem>

                            <MenuItem Header="Tài khoản"
                                      Name="LoginMenu"
                                      Cursor="Hand"
                                      Visibility="Visible">
                                <MenuItem Header="Login"
                                          Cursor="Hand">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Click">
                                            <i:InvokeCommandAction Command="{Binding ToLoginCommand}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </MenuItem>
                            </MenuItem>


                            <MenuItem Header="Hello, Mr"
                                      Name="AvaMenu"
                                      Cursor="Hand"
                                      Visibility="Collapsed">
                                <MenuItem.Icon>
                                    <materialDesign:PackIcon Kind="Account" />
                                </MenuItem.Icon>
                            </MenuItem>


                        </Menu>
                    </Grid>
                </Grid>

                <Grid Grid.Row="1">
                    <Border Background="{StaticResource cs_Background}"
                            CornerRadius="20"
                            BorderThickness="3"
                            BorderBrush="{StaticResource cs_BorderBrush}" />

                    <Slider x:Name="ImageSlider"
                            Minimum="0"
                            Maximum="4"
                            TickPlacement="BottomRight"
                            TickFrequency="1"
                            Value="{Binding SliderValue}"
                            Visibility="Hidden">
                        <i:Interaction.Triggers>

                            <i:EventTrigger EventName="ValueChanged">

                                <i:InvokeCommandAction Command="{Binding SliderChangedCommand}"
                                                       CommandParameter="{Binding mainVM}" />

                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Slider>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">

                        <Button x:Name="btnPrevious"
                                Style="{StaticResource BtnPrevStyle}"
                                Command="{Binding PreviousImageCommand}"
                                CommandParameter="{Binding ElementName=ImageSlider}" />

                        <StackPanel x:Name="imageStackPanel">

                            <Grid x:Name="grid0"
                                  Visibility="{Binding Image1Visibility}">
                                

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <StackPanel VerticalAlignment="Center">
                                    <Image  Name="ImageGrid"
                                            Source="../Images/01.jpg"
                                            Grid.Row="0"
                                            Width="800"
                                            Height="400"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                    </Image>
                                    <TextBlock  Name="TextGrid"
                                                Text="M O N K E Y"
                                                Grid.Row="1"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontFamily="Roboto"
                                                FontWeight="SemiBold"
                                                Foreground="{StaticResource cs_Txt}"
                                                Margin="0 30 0 5" />
                                </StackPanel>

                            </Grid>

                            <Grid x:Name="grid1"
                                  Visibility="{Binding Image2Visibility}">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <StackPanel VerticalAlignment="Center">
                                    <Image x:Name="ImageGrid1"
                                           Source="../Images/02.jpg"
                                           Grid.Row="0"
                                           Width="800"
                                           Height="400"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center">
                                    </Image>
                                    <MediaElement x:Name="mediaElement"
                                                  Width="800"
                                                  Height="400"
                                                  Visibility="Collapsed"
                                                  LoadedBehavior="Manual"
                                                  UnloadedBehavior="Stop">
                                        <MediaElement.Triggers>
                                            <EventTrigger RoutedEvent="MediaElement.Loaded">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <MediaTimeline Source="video.mp4"
                                                                       Storyboard.TargetName="mediaElement" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </MediaElement.Triggers>
                                    </MediaElement>


                                    <TextBlock Name="TextGrid1"
                                               Text="W O L F"
                                               Grid.Row="1"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontFamily="Roboto"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource cs_Txt}"
                                               Margin="0 30 0 0" />
                                </StackPanel>

                            </Grid>

                            <Grid x:Name="grid2"
                                  Visibility="{Binding Image3Visibility}">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <StackPanel VerticalAlignment="Center">
                                    <Image Name="ImageGrid2"
                                           Source="../Images/03.jpg"
                                           Grid.Row="0"
                                           Width="800"
                                           Height="400"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center" />

                                    <TextBlock Text="Z E B R A"
                                               Name="TextGrid2"
                                               Grid.Row="1"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontFamily="Roboto"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource cs_Txt}"
                                               Margin="0 30 0 0" />
                                </StackPanel>
                            </Grid>

                            <Grid x:Name="grid3"
                                  Visibility="{Binding Image4Visibility}">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <StackPanel VerticalAlignment="Center">
                                    <Image  Name="ImageGrid3"
                                            Source="../Images/04.jpg"
                                            Grid.Row="0"
                                            Width="800"
                                            Height="400"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center" />

                                    <TextBlock  Name="TextGrid3"
                                                Text="M O N K E Y"
                                                Grid.Row="1"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontFamily="Roboto"
                                                FontWeight="SemiBold"
                                                Foreground="{StaticResource cs_Txt}"
                                                Margin="0 30 0 5" />
                                </StackPanel>
                            </Grid>

                            <Grid x:Name="grid4"
                                  Visibility="{Binding Image5Visibility}">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <StackPanel VerticalAlignment="Center">
                                    <Image  Name="ImageGrid4"
                                            Source="../Images/05.jpg"
                                            Grid.Row="0"
                                            Width="800"
                                            Height="400"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center" />

                                    <TextBlock  Name="TextGrid4"
                                                Text="M O N K E Y"
                                                Grid.Row="1"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontFamily="Roboto"
                                                FontWeight="SemiBold"
                                                Foreground="{StaticResource cs_Txt}"
                                                Margin="0 30 0 5" />
                                </StackPanel>

                            </Grid>

                            <StackPanel Orientation="Horizontal"
                                        Grid.Row="1"
                                        HorizontalAlignment="Center"
                                        Margin="0 10 0 0">
                                <Button Name="ec1"
                                        Command="{Binding GetImage1Command}">
                                    <Button.Template>
                                        <ControlTemplate>
                                            <Ellipse Name="ecb1"
                                                     Height="10"
                                                     Width="10"
                                                     Fill="Black"
                                                     Opacity="{Binding OPC1}"
                                                     Margin="1" />
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button Name="ec2"
                                        Command="{Binding GetImage2Command}">
                                    <Button.Template>
                                        <ControlTemplate>
                                            <Ellipse Name="ecb2"
                                                     Height="10"
                                                     Width="10"
                                                     Fill="Black"
                                                     Opacity="{Binding OPC2}"
                                                     Margin="1" />
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button Name="ec3"
                                        Command="{Binding GetImage3Command}">
                                    <Button.Template>
                                        <ControlTemplate>
                                            <Ellipse Name="ecb3"
                                                     Height="10"
                                                     Width="10"
                                                     Fill="Black"
                                                     Opacity="{Binding OPC3}"
                                                     Margin="1" />
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button Name="ec4"
                                        Command="{Binding GetImage4Command}">
                                    <Button.Template>
                                        <ControlTemplate>
                                            <Ellipse Name="ecb4"
                                                     Height="10"
                                                     Width="10"
                                                     Fill="Black"
                                                     Opacity="{Binding OPC4}"
                                                     Margin="1" />
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button Name="ec5"
                                        Command="{Binding GetImage5Command}">
                                    <Button.Template>
                                        <ControlTemplate>
                                            <Ellipse Name="ecb5"
                                                     Height="10"
                                                     Width="10"
                                                     Fill="Black"
                                                     Opacity="{Binding OPC5}"
                                                     Margin="1" />
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>


                            </StackPanel>

                        </StackPanel>

                        <Button x:Name="btnNext"
                                Style="{StaticResource BtnNextStyle}"
                                Command="{Binding NextImageCommand}"
                                CommandParameter="{Binding ElementName=ImageSlider}" />

                    </StackPanel>
                </Grid>


                <Grid Grid.Row="2"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center">
                    
                    <TextBlock Text="PHIM ĐANG CHIẾU"
                               FontSize="20"
                               FontWeight="DemiBold"
                               Margin="10,10,10,50"></TextBlock>

                    <ListBox ItemsSource="{Binding MovieSet}"
                             SelectedItem="{Binding SelectedMovie, Mode=TwoWay}"
                             Name="MovieCardSet"
                             Margin="90,40,0,0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ScrollViewer.VerticalScrollBarVisibility="Disabled"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Center"
                             Width="1000"
                             Height="Auto">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction Command="{Binding DataContext.MovieClickCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                       CommandParameter="{Binding ElementName=MovieCardSet}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <ListBox.Template>
                            <ControlTemplate>
                                <!-- Empty template to allow ScrollViewer to capture mouse scroll -->
                                <ItemsPresenter />
                            </ControlTemplate>
                        </ListBox.Template>

                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel IsItemsHost="True"
                                           Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <materialDesign:Card Width="200"
                                                     Margin="20,20,20,20">

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Image Name="MovieImage"
                                               Width="185"
                                               Height="260"
                                               Source="{Binding image}"
                                               Stretch="Fill"
                                               ToolTipService.Placement="Right"
                                               ToolTipService.PlacementRectangle="100,0,0,0"
                                               ToolTipService.HorizontalOffset="10"
                                               ToolTipService.VerticalOffset="20"
                                               ToolTipService.HasDropShadow="false">
                                            <Image.ToolTip>
                                                <StackPanel>
                                                    <TextBlock>TRAILER</TextBlock>
                                                    <MediaElement Source="./Images/demo.wmv"
                                                                  Width="300"
                                                                  Height="250" />
                                                </StackPanel>
                                            </Image.ToolTip>
                                        </Image>


                                        <Button Grid.Row="0"
                                                Margin="0,0,16,-20"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Bottom"
                                                Style="{StaticResource MaterialDesignFloatingActionMiniSecondaryButton}">
                                            <materialDesign:PackIcon Kind="Bike" />
                                        </Button>
                                        <StackPanel Grid.Row="1"
                                                    Margin="8,10,5,0">
                                            <TextBlock Text="{Binding name}"
                                                       FontWeight="Bold"
                                                       FontSize="15"
                                                       TextWrapping="Wrap">

                                            </TextBlock>
                                            <TextBlock VerticalAlignment="Center"
                                                       TextWrapping="Wrap" />
                                        </StackPanel>
                                        <StackPanel Grid.Row="2"
                                                    Margin="8,0,0,0">
                                            <TextBlock FontSize="13">
                                                <Run Text="Thời lượng: "
                                                     FontWeight="Bold"></Run>
                                                <Run Text="{Binding duration}"></Run>
                                            </TextBlock>
                                            <TextBlock FontSize="13">
                                                <Run Text="Ngày phát hành: "
                                                     FontWeight="Bold"></Run>
                                                <Run Text="{Binding release_date, StringFormat=dd/MM/yyyy}"></Run>
                                            </TextBlock>
                                            <TextBlock FontSize="13">
                                                <Run Text="Đánh giá:"
                                                     FontWeight="Bold"></Run>
                                                <Run Text="{Binding rating}"></Run>

                                            </TextBlock>
                                        </StackPanel>
                                        <StackPanel Grid.Row="3"
                                                    Margin="8"
                                                    HorizontalAlignment="Right"
                                                    Orientation="Horizontal">
                                            <Button Width="30"
                                                    Padding="2,0,2,0"
                                                    materialDesign:RippleAssist.IsCentered="True"
                                                    Style="{StaticResource MaterialDesignToolButton}">
                                                <materialDesign:PackIcon Kind="ShareVariant" />
                                            </Button>
                                            <Button Width="30"
                                                    Padding="2,0,2,0"
                                                    materialDesign:RippleAssist.IsCentered="True"
                                                    Style="{StaticResource MaterialDesignToolButton}">
                                                <materialDesign:PackIcon Kind="Heart" />
                                            </Button>

                                        </StackPanel>
                                    </Grid>
                                </materialDesign:Card>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>


                </Grid>

                <Grid Grid.Row="3">
                </Grid>
            </Grid>
        </Grid>
    </ScrollViewer>
</Window>
